<script>
  import { defineComponent } from "@utils/utils.js";

  defineComponent("popover", () => {
    return {
      isOpen: false,
      contentId: `$id("popover-content")`,
      headerId: `$id("popover-header")`,

      toggle() {
        this.isOpen ? this.close() : this.open();
      },

      open() {
        this.isOpen = true;
        this.$nextTick(() => {
          const closeButton = this.$el.querySelector(".popover-close");
          if (closeButton) {
            closeButton.focus();
          }
        });
      },

      close() {
        this.isOpen = false;
      },
    };
  });
</script>

<style>
  .popover-trigger[aria-expanded="true"] {
    background: #1d4ed8;
  }

  .popover-content {
    position: absolute;
    z-index: 1000;
    background: white;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    min-width: 250px;
    max-width: 400px;
    padding: 1rem;
    margin-top: 0.5rem;
  }

  .popover-content::before {
    content: "";
    position: absolute;
    top: -8px;
    left: 1rem;
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-bottom: 8px solid white;
  }

  .popover-content::after {
    content: "";
    position: absolute;
    top: -9px;
    left: 1rem;
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-bottom: 8px solid #d1d5db;
  }

  .popover-header {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }

  .popover-body {
    color: #6b7280;
    line-height: 1.5;
  }

  .popover-close {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: none;
    border: none;
    font-size: 1.25rem;
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 4px;
    color: #6b7280;
    line-height: 1;
  }

  .popover-close:hover {
    background: #f3f4f6;
    color: #374151;
  }

  .popover-close:focus {
    outline: 2px solid #fbbf24;
    outline-offset: 1px;
  }

  /* Animation */
  .popover-enter {
    opacity: 0;
    transform: translateY(-10px) scale(0.95);
  }

  .popover-enter-to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .popover-leave {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .popover-leave-to {
    opacity: 0;
    transform: translateY(-10px) scale(0.95);
  }

  .popover-content {
    transition: all 0.2s ease-out;
  }
</style>
