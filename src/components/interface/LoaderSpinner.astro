<section class="component-section">
  <h3>Loading Spinner</h3>
  <div x-data="loaderSpinner()">
    <button class="btn btn-loader" @click="toggleLoading()">
      <span x-text="isLoading ? 'Arrêter' : 'Démarrer'"></span><span>le chargement</span>
    </button>
    <div
      x-show="isLoading"
      class="loading-container"
      role="status"
      aria-live="polite"
    >
      <div class="spinner" aria-hidden="true"></div>
      <span>Chargement en cours...</span>
    </div>
  </div>
</section>

<script>
  import { defineComponent } from "@utils/utils.js";

  defineComponent("loaderSpinner", () => {
    return {
      isLoading: false,

      toggleLoading() {
        this.isLoading = !this.isLoading;
      },

      startLoading() {
        this.isLoading = true;
      },

      stopLoading() {
        this.isLoading = false;
      },
    };
  });
</script>

<style>
  .spinner {
    border: 4px solid #f3f3f3;
    border-top: 4px solid #007acc;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    animation: spin 2s linear infinite;
    margin: 0 auto;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 2rem;
  }

  .btn-loader {
    column-gap: 0.25rem;
  }
</style>
